.movie-swiper {
  height: 100vh;
}

.movie-card {
  height: 100%;
  width: 100%;
  background-color: #eee;
  margin: 0 20rpx;
  position: relative;
}

.movie {
  display: flex;
}

.return-button {
  position: absolute;
  right: 10px;
  top: 20px;
  font-size: 26rpx;
  font-style: italic;
  border: 1px solid blue;
  border-right: 0;
  border-radius: 10%;
}

.commend {
  position: absolute;
  top: 10px;
}

.movie-image {
  height: 375rpx;
  width: 375rpx;
}